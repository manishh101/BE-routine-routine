# Production Environment Variables for Backend
# Copy this file to .env in production and update the values

# MongoDB Atlas Connection URI - Production Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bctroutine?retryWrites=true&w=majority&appName=routine
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/bctroutine?retryWrites=true&w=majority&appName=routine
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/bctroutine?retryWrites=true&w=majority&appName=routine

# Application Settings
NODE_ENV=production
PORT=7102

# Frontend URL (update with your Vercel deployment URL)
FRONTEND_URL=https://your-frontend-url.vercel.app

# JWT Settings - IMPORTANT: Use a strong, unique secret in production
JWT_SECRET=your-super-strong-jwt-secret-here-change-this-in-production
JWT_EXPIRE=30d

# RabbitMQ Configuration (disabled for now)
USE_RABBITMQ=false
RABBITMQ_URL=amqp://localhost

# Security Settings
BCRYPT_ROUNDS=12

# CORS Settings
CORS_ORIGIN=https://your-frontend-url.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
